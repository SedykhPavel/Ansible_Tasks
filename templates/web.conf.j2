server {
    listen 8080;

    location / {
        default_type text/plain;
        return 200 "Welcome to server: {{ inventory_hostname }}\n";
    }

    location /files {
        alias /var/www/files/; 
        autoindex on;             
        autoindex_exact_size off; # Показывает размер в КБ/МБ, а не байтах
        autoindex_localtime on;   # Время файлов по локальному времени сервера
    }
}
